{
	"compilerOptions": {
		"target": "es2015", // Ensure this is set to ES2015 or later
		"lib": ["es2015", "dom"], // Add ES2015 to the lib array
		"module": "esnext", // Ensure the module system is compatible
		"moduleResolution": "node", // Use Node-style module resolution
		"strict": true, // Enable strict type checking
		"esModuleInterop": true, // For compatibility with commonjs modules
		"skipLibCheck": true, // Skip checking of library files
		"forceConsistentCasingInFileNames": true
	},
	"include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"]
}
